{
  "compilerOptions": {
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "module": "commonjs",
    "target": "ES2021",
    "sourceMap": true,
    "noEmit": true,
    "declaration": true,
    "strict": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "lib": ["ES2021"],
    "paths": {
      "src/*": ["./src/*"],
      "test/*": ["./test/*"]
    },
    "plugins": [
      { "transform": "typescript-transform-paths" }
    ]
  },
  "ts-node": {
    "transpileOnly": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
